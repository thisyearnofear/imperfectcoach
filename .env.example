# Imperfect Coach Environment Variables
# Copy this file to .env.local and fill in your values

# Coinbase Developer Platform (CDP)
# Get your credentials from: https://portal.cdp.coinbase.com/
VITE_COINBASE_PROJECT_ID=your_coinbase_project_id_here
VITE_COINBASE_API_KEY_ID=your_coinbase_api_key_id_here
VITE_COINBASE_CLIENT_API_KEY=your_coinbase_client_api_key_here
VITE_COINBASE_API_KEY_SECRET=your_coinbase_api_key_secret_here

# Thirdweb Client ID (already configured but can be customized)
# Get your client ID from: https://thirdweb.com/dashboard
VITE_THIRDWEB_CLIENT_ID=cd2fc16a6b59aa67ccaa3c76eaa421f3

# Web3.bio API Key (for enhanced basename resolution)
# Get your API key from: https://web3.bio/
VITE_WEB3BIO_API_KEY=your_web3bio_api_key_here

# Supabase Configuration (if using Supabase for backend)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Base Network Configuration (Alchemy RPC)
VITE_BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your_alchemy_api_key_here
VITE_BASE_MAINNET_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here

# Contract Addresses
VITE_FITNESS_LEADERBOARD_CONTRACT=0x025D862255d5bc6F7D84fa5EBc252474D5092FB9

# App Configuration
VITE_APP_NAME="Imperfect Coach"
VITE_APP_URL=https://imperfectcoach.netlify.app

# Development Settings
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=true

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# Wallet Configuration
VITE_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# Analytics (optional)
VITE_ANALYTICS_ID=your_analytics_id_here

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SIWE=true
VITE_ENABLE_SMART_REFRESH=true
VITE_ENABLE_ONBOARDING=true
