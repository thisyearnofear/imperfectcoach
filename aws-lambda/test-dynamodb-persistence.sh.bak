echo "$PAYLOAD" > /tmp/discovery-payload.json
aws lambda invoke \
  --function-name agent-discovery \
  --payload file:///tmp/discovery-payload.json \
  --region "$REGION" \
  /tmp/discovery.json > /dev/null

FOUND_BASE=$(cat /tmp/discovery.json | jq ".body | fromjson | .agents[] | select(.id == \"$BASE_AGENT\") | .name")
if [ -n "$FOUND_BASE" ]; then
  echo "âœ… Base agent discoverable: $FOUND_BASE"
