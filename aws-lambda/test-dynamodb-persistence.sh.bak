  --function-name agent-discovery \
  --payload file:///tmp/base-payload.json \
  --region "$REGION" \
  /tmp/base-register.json > /dev/null

BASE_STATUS=$(cat /tmp/base-register.json | jq -r '.body | fromjson | .success')
